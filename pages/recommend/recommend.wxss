/* pages/recommend/recommend.wxss */
@import '../movies/movies.wxss';

/* 输入框内字体大小 */
.select_text {
  font-size: 30rpx;
}

/* 下拉列表图片 */
.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

/* 搜索框的样式 */
.select_box {
  background: #fff;
  width: 100%;
  /* 相对定位 */
  position: relative;
}

.select {
  width: 90%;
  height: 70rpx;
  border: 1px solid red;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  margin: 0 10rpx;
}

.option_box {
  position: absolute;
  top: 70rpx;
  width: 100%;
  border: 1px solid #efefef;
  box-sizing: border-box;
  overflow-y: auto;
  background: #fff;
  /* 点击下拉列表显示动画特效 */
  transition: height 0.3s;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}