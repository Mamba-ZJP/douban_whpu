/* pages/movies/movies.wxss */
.view {
  background-color: rgb(71, 67, 67);
}

.img {
  width: 100%;
}

.movie {
  display: flex;
  flex-direction: row;
}

.pic image {
  width: 100px;
  height: 150px;
  padding-left: 5px;
}

.movie-info {
  padding-left: 20px;
}

.base-info {
  color: #ffffff;
  font-size: 12px;
  padding-top: 20px;
  line-height: 20px;
}

.hr {
  height: 2px;
  width: 100%;
  background-color: black;
  border-top: white solid 1px;
  border-bottom: white solid 1px;
}